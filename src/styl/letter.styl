@import "funcs"
// Uses ems

@import "./common.css"
// Builds on common styles

section.letter
  width unit((150/bodyem), em)
  margin 0 auto

h1
  font-size 1em
  margin-top unit((5/bodyem), em)

.wrap
  overflow auto

.referee
  float left
  margin unit((5/bodyem), em)

.salutation, .close .signoff, .close .name
  margin-top unit((20/bodyem), em)


div.addresses
  overflow auto
  padding-top unit((10/bodyem), em)

div.recipientAddress
  float left

div.senderAddress
  float right

div.sentDate
  margin-top unit((5/bodyem), em)